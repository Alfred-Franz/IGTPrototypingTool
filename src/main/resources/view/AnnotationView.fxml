<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="Infinity" maxWidth="Infinity"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AnnotationController">
   <content>
      <BorderPane>
         <bottom>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="368.0" style="-fx-border-color: grey;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <children>
                  <Button mnemonicParsing="false" text="No Tip" prefWidth="120.0" prefHeight="40.0" style="-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="55.0" right="55.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="&lt;" prefHeight="40.0" style="-fx-font-weight: bold;-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="2.0" right="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="&gt;" prefHeight="40.0" style="-fx-font-weight: bold;-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="2.0" right="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Done" prefWidth="120.0" prefHeight="40.0" style="-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="55.0" right="55.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <top>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="368.0" style="-fx-border-color: grey;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <children>
                  <Button fx:id="exampleButton" onAction="#Handle_Upload_Functionality" text="Import" prefWidth="120.0" prefHeight="40.0" style="-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="55.0" right="55.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exampleButton" text="Export" prefWidth="120.0" prefHeight="40.0" style="-fx-font-size: 16px;" />
                  <Button fx:id="exampleButton" text="Clear Marks" prefWidth="120.0" prefHeight="40.0" style="-fx-font-size: 16px;">
                     <HBox.margin>
                        <Insets left="55.0" right="55.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </top>
         <left>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="202.0" prefWidth="188.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="uploadedImages" prefHeight="200.0" prefWidth="100.0" />
               </content>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
            </ScrollPane>
         </left>
         <center>
            <TitledPane collapsible="false" text="Selected Image" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <content>
                  <ImageView fx:id="selectedImageView" fitHeight="500.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </content>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </TitledPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
